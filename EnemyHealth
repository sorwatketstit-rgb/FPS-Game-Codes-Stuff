using UnityEngine;

public class EnemyHealth : MonoBehaviour
{
    [Header("Health Settings")]
    [Tooltip("Enemy's current health")]
    public int currentHealth = 3;

    [Tooltip("Maximum health")]
    public int maxHealth = 3;

    [Header("Death Effects (Optional)")]
    [Tooltip("Particle effect to spawn on death")]
    public GameObject deathEffect;

    [Tooltip("Audio clip to play on death")]
    public AudioClip deathSound;

    [Tooltip("Audio source (will find one if not assigned)")]
    public AudioSource audioSource;

    [Header("Debug")]
    public bool showDebugInfo = true;

    void Start()
    {
        // Initialize health
        currentHealth = maxHealth;

        // Find audio source if not assigned
        if (audioSource == null)
        {
            audioSource = GetComponent<AudioSource>();
        }
    }

    /// <summary>
    /// Damage the enemy by a specified amount
    /// </summary>
    public void TakeDamage(int damageAmount = 1)
    {
        currentHealth -= damageAmount;

        if (showDebugInfo)
        {
            Debug.Log($"{gameObject.name} took {damageAmount} damage. Health: {currentHealth}/{maxHealth}");
        }

        // Check if dead
        if (currentHealth <= 0)
        {
            Die();
        }
    }

    void Die()
    {
        if (showDebugInfo)
        {
            Debug.Log($"{gameObject.name} died!");
        }

        // Award score to player
        if (ScoreManager.Instance != null)
        {
            ScoreManager.Instance.AddKill();
        }
        else
        {
            Debug.LogWarning("ScoreManager not found! Enemy kill not counted.");
        }

        // Spawn death effect
        if (deathEffect != null)
        {
            Instantiate(deathEffect, transform.position, Quaternion.identity);
        }

        // Play death sound
        if (deathSound != null && audioSource != null)
        {
            // Play sound at position (so it's not destroyed immediately)
            AudioSource.PlayClipAtPoint(deathSound, transform.position);
        }

        // Destroy enemy
        Destroy(gameObject);
    }

    /// <summary>
    /// Heal the enemy
    /// </summary>
    public void Heal(int healAmount)
    {
        currentHealth = Mathf.Min(currentHealth + healAmount, maxHealth);

        if (showDebugInfo)
        {
            Debug.Log($"{gameObject.name} healed {healAmount}. Health: {currentHealth}/{maxHealth}");
        }
    }

    // Public getters
    public int GetCurrentHealth() => currentHealth;
    public int GetMaxHealth() => maxHealth;
    public float GetHealthPercent() => (float)currentHealth / maxHealth;
}
