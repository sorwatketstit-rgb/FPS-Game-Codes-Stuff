using UnityEngine;

public class EnemyHealth : MonoBehaviour
{
    [Header("Health Settings")]
    [Tooltip("Enemy's current health")]
    public int currentHealth = 3;

    [Tooltip("Maximum health")]
    public int maxHealth = 3;

    [Header("Audio")]
    [Tooltip("Audio clip to play when hit")]
    public AudioClip hitSound;

    [Tooltip("Audio clip to play on death")]
    public AudioClip deathSound;

    [Tooltip("Volume for hit sound (0-1)")]
    [Range(0f, 1f)]
    public float hitSoundVolume = 0.7f;

    [Tooltip("Volume for death sound (0-1)")]
    [Range(0f, 1f)]
    public float deathSoundVolume = 1f;

    [Header("Death Effects (Optional)")]
    [Tooltip("Particle effect to spawn on death")]
    public GameObject deathEffect;

    [Header("Debug")]
    public bool showDebugInfo = true;

    // Private
    private Transform playerTransform;

    void Start()
    {
        // Initialize health
        currentHealth = maxHealth;

        // Find player
        GameObject player = GameObject.FindGameObjectWithTag("Player");
        if (player != null)
        {
            playerTransform = player.transform;
        }
        else
        {
            Debug.LogWarning($"{gameObject.name}: Player not found! Sounds will play at enemy position.");
        }
    }

    /// <summary>
    /// Damage the enemy by a specified amount
    /// </summary>
    public void TakeDamage(int damageAmount = 1)
    {
        currentHealth -= damageAmount;

        if (showDebugInfo)
        {
            Debug.Log($"{gameObject.name} took {damageAmount} damage. Health: {currentHealth}/{maxHealth}");
        }

        // Play hit sound at player location (only if still alive after damage)
        if (currentHealth > 0 && hitSound != null)
        {
            Vector3 soundPosition = playerTransform != null ? playerTransform.position : transform.position;
            AudioSource.PlayClipAtPoint(hitSound, soundPosition, hitSoundVolume);
        }

        // Check if dead
        if (currentHealth <= 0)
        {
            Die();
        }
    }

    void Die()
    {
        if (showDebugInfo)
        {
            Debug.Log($"{gameObject.name} died!");
        }

        // Award score to player
        if (ScoreManager.Instance != null)
        {
            ScoreManager.Instance.AddKill();
        }
        else
        {
            Debug.LogWarning("ScoreManager not found! Enemy kill not counted.");
        }

        // Spawn death effect
        if (deathEffect != null)
        {
            Instantiate(deathEffect, transform.position, Quaternion.identity);
        }

        // Play death sound at player location
        if (deathSound != null)
        {
            Vector3 soundPosition = playerTransform != null ? playerTransform.position : transform.position;
            AudioSource.PlayClipAtPoint(deathSound, soundPosition, deathSoundVolume);
        }

        // Destroy enemy
        Destroy(gameObject);
    }

    /// <summary>
    /// Heal the enemy
    /// </summary>
    public void Heal(int healAmount)
    {
        currentHealth = Mathf.Min(currentHealth + healAmount, maxHealth);

        if (showDebugInfo)
        {
            Debug.Log($"{gameObject.name} healed {healAmount}. Health: {currentHealth}/{maxHealth}");
        }
    }

    // Public getters
    public int GetCurrentHealth() => currentHealth;
    public int GetMaxHealth() => maxHealth;
    public float GetHealthPercent() => (float)currentHealth / maxHealth;
}
